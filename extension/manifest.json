{
  "manifest_version": 3,
  "name": "Routine Check Extension",
  "version": "1.0.0",
  "description": "Manage your daily routines and sync them with your calendar",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage", "alarms", "notifications", "cookies"],
  "host_permissions": ["http://localhost:3000/*"],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
